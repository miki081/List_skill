<div class="container my-5">
  <div class="row">
    <h2>会員情報一覧</h2>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-10">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to admins_user_path(user) do %>
              <%= user.nick_name %>
              <% end %>
            </td>
          <td><%= user.email %></td>
          <td><% if user.is_valid == true %>
              有効会員
              <% else %>
              退会済み
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
 </div>


  <div class="container">
    <div class="row">
    <div class="col-md-4 offset-md-4 py-2 mt-5">
    <%#= paginate @customers %>
    </div>
    </div>
  </div> 