<div class='container px-5 px-sm-0'>
    <div class='row'>
     <div class='col-md-3'>
       <%= render 'users/search', users: @users  %>
     </div>
<div class='col-md-8 offset-md-1'>
 <h2>Events</h2>
 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
     <% @Events.each do |Event| %>
     <tr>
       <td><%#=link_to image_tag(src= 'no_image.jpg', class: @user), user_path(book.user) %></br>
